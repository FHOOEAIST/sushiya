<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <mvc:annotation-driven/>
    <bean class="science.aist.sushiya.external.rest.handler.CustomGlobalExceptionHandler" />

    <import resource="classpath:serviceConfig.xml" />

    <bean id="testController" class="science.aist.sushiya.external.rest.impl.TestControllerImpl"/>

    <bean id="sampleController" class="science.aist.sushiya.external.rest.impl.SampleControllerImpl">
        <constructor-arg name="sampleService" ref="sampleService"/>
        <constructor-arg name="sampleToSampleDTOTransformer">
            <bean class="science.aist.sushiya.core.transformer.SampleToSampleDTOTransformer" />
        </constructor-arg>
    </bean>
</beans>